{
  "openapi": "3.0.0",
  "info": {
    "title": "Email Phishing Detection API",
    "version": "1.0.0",
    "description": "API para detectar correos electrónicos de phishing usando machine learning y análisis de archivos adjuntos."
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Verifica el estado de la API",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "API en funcionamiento",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "running"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "post": {
        "summary": "Predice si un correo es phishing o no",
        "operationId": "predictEmail",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Predicción realizada correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PredictionResponse"
                }
              }
            }
          },
          "429": {
            "description": "Demasiadas solicitudes (Rate Limit Exceeded)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "detail": {
                      "type": "string",
                      "example": "Rate limit exceeded"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EmailData": {
        "type": "object",
        "required": [
          "From",
          "To",
          "Subject",
          "Body",
          "Date"
        ],
        "properties": {
          "From": {
            "type": "string",
            "format": "email"
          },
          "To": {
            "type": "string",
            "format": "email"
          },
          "Subject": {
            "type": "string"
          },
          "Body": {
            "type": "string"
          },
          "Date": {
            "type": "string",
            "format": "date-time"
          },
          "Concatenated_URLs": {
            "type": "string",
            "default": "No Data"
          },
          "Attachments": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "byte"
            }
          }
        }
      },
      "PredictionResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "OK"
          },
          "predictions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "model_prediction": {
                  "type": "object",
                  "properties": {
                    "label": {
                      "type": "string",
                      "example": "Phishing"
                    },
                    "malicious_file": {
                      "type": "boolean",
                      "example": false
                    },
                    "probability": {
                      "type": "number",
                      "format": "float",
                      "example": 0.87
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}